<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/rounded_bg_corner_first_item">

    <RelativeLayout
        android:id="@+id/topContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sea_green"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:background="@color/sea_green"
            android:src="@drawable/ic_call_white_24dp" />

        <TextView
            android:id="@+id/TextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/logo"
            android:text="Contact Information"
            android:textColor="@color/main_White"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/phoneNumTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topContent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7sp"
        android:text="Phone Number:"
        android:textColor="@color/midnight_green"
        android:textSize="15sp" />

    <TextView

        android:id="@+id/faciPageTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumTextField"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7sp"
        android:textColor="@color/midnight_green"
        android:text="Facebook Page:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/faciWebsiteTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faciPageTextField"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7sp"
        android:text="Website:"
        android:textColor="@color/midnight_green"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/faciEmailTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faciWebsiteTextField"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7sp"
        android:text="Email:"
        android:textColor="@color/midnight_green"
        android:textSize="15sp" />

</RelativeLayout>