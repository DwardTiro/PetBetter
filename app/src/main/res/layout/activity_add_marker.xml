<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/markerToolbar"
        layout="@layout/toolbar_add_marker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/addMarkerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/markerToolbar"
        android:orientation="vertical"
        android:background="@color/main_White">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="20dp"
            android:text="Name of Location:"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editBldgName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:hint="Write name of the location here."
            android:background="@drawable/custom_edittext"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinnerLocType"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/typeSpinner" />

    </LinearLayout>
</RelativeLayout>