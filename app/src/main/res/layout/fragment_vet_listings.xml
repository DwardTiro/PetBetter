<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="330dp"
    android:layout_height="250dp"
    android:background="@drawable/listing_border"
    android:layout_gravity="center"
    android:onClick="vet_listing_clicked"
    >

    <ImageView
        android:id="@+id/vet_list_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/sample_vet_clinic"/>
    <TextView
        android:id="@+id/vet_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vet_listing_name"
        android:textSize="@dimen/listing_font_size"
        android:textColor="@color/darkAccent"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/vet_list_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>