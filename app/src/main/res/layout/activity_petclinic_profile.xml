<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/clinicProfileImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/sample_vet_clinic"/>
            <Button
                android:id="@+id/clinicBackButton"
                android:layout_width="27dp"
                android:layout_height="37dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/back_button"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:onClick="clinicBackClicked"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/clinicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/sample_clinic"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/clinicAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="@string/sample_address"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"

                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Operating hours: "
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/clinicOpenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="@string/sample_open_time"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=" _ "
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/clinicCloseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="@string/sample_close_time"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"

            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"

                android:text="Landline: "
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"

                />

            <TextView
                android:id="@+id/clinicLandLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"

                android:text="@string/sample_landline"
                android:textSize="15dp"
                android:textColor="@color/black"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"

            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/clinicRatingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/clinicRatingNumerator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_rating"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/clinicRatingDenominator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/5"
                android:textColor="@color/black"/>

        </LinearLayout>
        <Button
            android:id="@+id/viewClinicMapButton"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            android:background="@color/main_Color"

            android:text="View in Map"
            android:textSize="18dp"
            android:textColor="@color/main_White" />

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/box_border"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:text="Services:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>


                <LinearLayout
                    android:id="@+id/serviceContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/imageServiceOne"
                        android:layout_width="100dp"
                        android:layout_height="180dp"
                        android:src="@drawable/sample_vet_service"
                        android:layout_marginRight="2dp"
                        />
                    <ImageView
                        android:id="@+id/imageServiceTwo"
                        android:layout_width="100dp"
                        android:layout_height="180dp"
                        android:src="@drawable/sample_vet_service"
                        android:layout_marginRight="2dp"
                        />
                    <ImageView
                        android:id="@+id/imageServiceThree"
                        android:layout_width="100dp"
                        android:layout_height="180dp"
                        android:src="@drawable/sample_vet_service"
                        android:layout_marginRight="2dp"
                        />

                </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/messageClinicButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Message"
                />
            <Button
                android:id="@+id/bookmarkClinicButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Bookmark"
                />
            <Button
                android:id="@+id/rateClinicButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Rate"/>


        </LinearLayout>

    </LinearLayout>
</ScrollView>