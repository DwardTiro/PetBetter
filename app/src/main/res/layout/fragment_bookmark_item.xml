<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="370dp"
    android:layout_height="70dp"
    android:background="@drawable/listing_border"
    android:layout_gravity="center"
    android:onClick="bookmarkListingClicked"
    android:weightSum="1">
    <TextView
        android:id="@+id/bookmarkListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/sample_clinic"
        android:textSize="@dimen/listing_font_size"
        android:textColor="@color/darkAccent"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/bookmarkListAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/sample_address"

        android:layout_below="@+id/bookmarkListName"
        android:layout_alignStart="@+id/bookmarkListName" />

</LinearLayout>