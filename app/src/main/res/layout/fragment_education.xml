<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/rounded_bg_corner_first_item">

    <RelativeLayout
        android:id="@+id/topContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deep_turquoise"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:background="@color/deep_turquoise"
            android:src="@drawable/ic_school_white_24dp" />

        <TextView
            android:id="@+id/TextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/logo"
            android:text="Education"
            android:textColor="@color/main_White"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bachelorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topContent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7sp"
        android:text="Bachelor Degree:"
        android:textStyle="bold"
        android:textColor="@color/midnight_green"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/bachelorEducationTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bachelorText"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="7sp"
        android:text="Bachelor of Science in Biology"
        android:textColor="@color/midnight_green"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myrtle_green"
        android:orientation="horizontal"
        android:layout_below="@+id/bachelorEducationTextField"
        />

    <TextView
        android:id="@+id/doctorateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7sp"
        android:text="Doctorate Degree:"
        android:textStyle="bold"
        android:textColor="@color/midnight_green"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/vetEducationTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctorateText"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="7sp"
        android:text="Doctor of Veterinary Medicine"
        android:textColor="@color/midnight_green"
        android:textSize="15sp" />


</RelativeLayout>