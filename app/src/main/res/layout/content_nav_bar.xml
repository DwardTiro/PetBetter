<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.owner.petbetter.activities.HomeActivity"
    tools:showIn="@layout/app_bar_nav_bar"
    >

    <android.support.v7.widget.Toolbar android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_Color"
        android:gravity="center_vertical|start"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/vetButton"
                android:scaleType="fitCenter"
                android:text="Veterinarians"
                android:textColor="@color/colorWhite"
                android:adjustViewBounds="true"
                android:background="@color/main_Color"
                android:onClick="vetButtonClicked"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/petCareButton"
                android:scaleType="fitCenter"
                android:text="Pet Care"
                android:textColor="@color/colorWhite"
                android:adjustViewBounds="true"
                android:background="@color/main_Color"
                android:onClick="petCareButtonClicked"/>


        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="400dp"
        android:layout_height="510dp"
        tools:layout_editor_absoluteX="-5dp"
        android:layout_below="@+id/menu_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/menu_bar">
    </FrameLayout>

</RelativeLayout>