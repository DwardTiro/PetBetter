<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/sample_vet_clinic"/>
        <Button
            android:id="@+id/backButton"
            android:layout_width="27dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/back_button"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:onClick="backClicked"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="150dp"
            android:src="@drawable/vet_sample_pic"
            />
    </RelativeLayout>

        <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
             android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
        android:text="@string/sample_name"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
        android:id="@+id/vetListSpecialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="@string/sample_address"
        android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"

        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"

            android:text="Landline: "
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/profileLandLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"

            android:text="@string/sample_landline"
            android:textSize="15dp"
            android:textColor="@color/black"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"

        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/profileRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: "
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/vetListRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_rating"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/profileRatingDenominator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/5"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/messageVetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Message"
            />
        <Button
            android:id="@+id/bookmarkVetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Bookmark"
            />
        <Button
            android:id="@+id/rateVetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Rate"/>


    </LinearLayout>

</LinearLayout>
</ScrollView>