<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg_corner"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >

    <ImageView
        android:id="@+id/locationLogo"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:src="@mipmap/ic_location_on_black_24dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/addressTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/locationLogo"
        android:layout_marginStart="3dp"
        android:text="Address:"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/addressTextField"
        android:layout_below="@id/addressTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_address"
        android:layout_marginStart="7sp"
        android:textSize="14sp"
        />

    <TextView
        android:layout_below="@id/addressTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to view location."
        android:layout_marginStart="7sp"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/teal_blue"
        />

</RelativeLayout>