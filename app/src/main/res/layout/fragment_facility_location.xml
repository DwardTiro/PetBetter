<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg_corner"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >

    <ImageView
        android:id="@+id/locationLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_location_on_black_24dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="2dp"

        android:layout_marginStart="2dp"
        />
    <TextView
        android:id="@+id/addressTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/locationLogo"
        android:text="Address:"
        android:textStyle="bold"
        android:textSize="15sp"
        />

    <TextView
        android:layout_below="@id/addressTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_address"
        />

</RelativeLayout>