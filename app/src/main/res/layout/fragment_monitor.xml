<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/rounded_bg_corner">

    <FrameLayout
        android:id="@+id/imageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/monitorProfilePic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/vet_sample_pic" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:src="@drawable/profile_picture_frame" />

    </FrameLayout>

    <TextView
        android:id="@+id/monitorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageLayout"
        android:text="@string/sample_name"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/banButton"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_button_red"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:textAllCaps="false"
        android:layout_centerVertical="true"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:text="Remove"
        android:textSize="12sp" />


</RelativeLayout>