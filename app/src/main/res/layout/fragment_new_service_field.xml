<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/post_border"
    android:padding="10dp">

    <EditText
        android:id="@+id/serviceNameField"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Service name"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textSize="18sp"
        android:background="@drawable/post_border"
        android:maxLines="1"
        android:textCursorDrawable="@null"
        android:textColor="@color/black"
        android:layout_centerVertical="true"

        />
    <EditText
        android:id="@+id/servicePriceField"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/serviceNameField"
        android:layout_marginStart="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textCursorDrawable="@null"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"

        android:hint="Price"
        android:textSize="18sp"

        android:background="@drawable/post_border"
        android:maxLines="1"
        />
    <ImageButton
        android:id="@+id/removeFieldButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dialog_close_light"
        android:onClick="deleteRow"

        android:background="@color/colorWhite"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />


</RelativeLayout>