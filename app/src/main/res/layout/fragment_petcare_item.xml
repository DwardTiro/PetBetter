<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="230dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/rounded_bg_corner"

    android:onClick="petCareListingClicked"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/clinicListImage"
                android:layout_width="310dp"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:background="@drawable/sample_vet_clinic" />

            <TextView
                android:id="@+id/clinicListRating"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="124dp"
                android:background="@color/main_Color"
                android:text="5.0"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/image_border" />
        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLayout"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clinicListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/sample_clinic"
            android:textColor="@color/black"
            android:textSize="@dimen/listing_font_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/clinicListAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_address"
            android:textColor="@color/darkAccent"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open from "
                android:textColor="@color/teal_blue"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/clinicListOpenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:00"
                android:textColor="@color/teal_blue"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textColor="@color/teal_blue"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/clinicListCloseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00"
                android:textColor="@color/teal_blue"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
