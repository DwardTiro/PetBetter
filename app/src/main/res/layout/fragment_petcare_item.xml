<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="330dp"
    android:layout_height="250dp"
    android:background="@drawable/listing_border"
    android:layout_gravity="center"
    android:onClick="petCareListingClicked"
    android:weightSum="1">
    <ImageView
        android:id="@+id/clinicListImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/sample_vet_clinic"/>
    <TextView
        android:id="@+id/clinicListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text= "@string/sample_clinic"
        android:textSize="@dimen/listing_font_size"
        android:textColor="@color/darkAccent"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/clinicListAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="@string/sample_address"

        />
    <TextView
        android:id="@+id/clinicListRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="5"

        />

</LinearLayout>
