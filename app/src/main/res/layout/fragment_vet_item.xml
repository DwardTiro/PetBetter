<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="330dp"
    android:layout_height="250dp"
    android:background="@drawable/listing_border"
    android:layout_gravity="center"

    android:weightSum="1">


    <ImageView
        android:id="@+id/vetListImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/sample_vet_clinic"/>
    <TextView
        android:id="@+id/vetListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/sample_name"
        android:textSize="@dimen/listing_font_size"
        android:textColor="@color/darkAccent"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/vetListSpecialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="Animal Behaviour"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/vetListRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="5"
        />

</LinearLayout>