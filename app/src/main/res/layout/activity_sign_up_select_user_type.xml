<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medTurquoise">


    <include
        android:id="@+id/toolbar_signup"
        layout="@layout/toolbar_signup"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_signup"
        android:background="@color/medTurquoise"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/app_icon_yellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="20dp"
            android:text="Sign Up for PetBetter"

            android:textColor="@color/colorWhite"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/petOwnerTypeButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:onClick="petOwnerTypeButtonClicked"
            android:text="Pet Owner"
            android:textAllCaps="false"
            android:textColor="@color/main_White"
            android:textSize="28sp" />

        <Button
            android:id="@+id/veterinarianTypeButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@color/dark_candy_red"
            android:onClick="veterinarianTypeButtonClicked"
            android:text="Veterinarian"
            android:textAllCaps="false"
            android:textColor="@color/main_White"
            android:textSize="28sp" />

    </LinearLayout>
</RelativeLayout>